#!/bin/bash
#Tweaks to improve speed of browser

# Fix to intel gpu
if [ "$(lspci | grep 'UHD Graphics 605')" != "" ]; then
    export LIBVA_DRIVER_NAME=i965
fi

OPTIMIZATION="$(cat ~/.config/browser-optimize 2>/dev/null)"
VAINFO="$(vainfo 2>&1)"

if [ -e "$HOME/.config/browser-brave-disable-ad" ]; then

    DISABLE_BRAVE_AD="--disable-brave-extension"
fi

if [ -e "$HOME/.config/browser-brave-disable-crypto" ]; then

    DISABLE_BRAVE_CRYPTO="--disable-brave-rewards-extension"
fi

if [ "$XDG_SESSION_TYPE" = "wayland" ]; then
    enableWayland='--ozone-platform=wayland'

    waylandTweaks=',WebRTCPipeWireCapturer'
fi


if [ "$OPTIMIZATION" = "" ]
then
    if [ "$(systemd-detect-virt)" = "none" ] && [ "$(echo "$VAINFO" | grep nvidia)" = "" ] && [ "$(echo "$VAINFO" | grep nouveau)" = "" ] && [ "$(echo "$VAINFO" | grep VAProfileVC1Advanced)" != "" ]; then
        OPTIMIZATION="performance"
    else
        OPTIMIZATION="optimize"
    fi

fi

if [ "$OPTIMIZATION" = "performance" ]
then

    PARAMETERS="--enable-accelerated-2d-canvas --enable-accelerated-mjpeg-decode --enable-accelerated-video --enable-features=MarkHttpAs,StrictOriginIsolation,VaapiVideoDecoder,VaapiVideoEncoder,RawDraw${waylandTweaks} --enable-gpu-rasterization --enable-quic --use-vulkan --ignore-gpu-blocklist --enable-parallel-downloading --font-render-hinting=none --enable-zero-copy --enable-accelerated-video-decode --canvas-oop-rasterization --disable-features=UseChromeOSDirectVideoDecoder --enable-hardware-overlays=single-fullscreen,single-on-top,underlay --enable-drdc"
    

elif [ "$OPTIMIZATION" = "optimize" ]
then

    PARAMETERS="--enable-accelerated-2d-canvas --enable-accelerated-mjpeg-decode --enable-accelerated-video --enable-features=MarkHttpAs,StrictOriginIsolation${waylandTweaks} --enable-gpu-rasterization --enable-quic --use-vulkan --enable-parallel-downloading --font-render-hinting=none"
    
else

    PARAMETERS=""

fi


if [ "$(glxinfo | grep -i Opengl | grep -i -e vmware -e llvmpipe)" != "" ]; then
    PARAMETERS="--disable-gpu --global-media-controls-modern-ui=1 --enable-prerender2 --omnibox-trigger-for-prerender2"
fi


LD_PRELOAD=/usr/lib/nosync-browser.so exec /usr/bin/brave --class="brave.com,Chromium-browser" --process-per-site $enableWayland $DISABLE_BRAVE_AD $DISABLE_BRAVE_CRYPTO $PARAMETERS ${1+"$@"}
