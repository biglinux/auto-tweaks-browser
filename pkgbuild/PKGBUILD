# Maintainer: Bruno Goncalves <bigbruno@gmail.com>

pkgname=auto-tweaks-browser
pkgver=$(date +%y.%m.%d)
pkgrel=$(date +%H%M)
arch=('any')
license=('GPL')
url="https://github.com/biglinux/auto-tweaks-browser"
pkgdesc="Auto optimize brave, chromium, epiphany, falkon, firefox, google-chrome, opera and vivaldi"
depends=('libeatmydata' 'libva-utils' 'mesa-utils' 'irqbalance')
source=("git+https://github.com/biglinux/auto-tweaks-browser.git")
md5sums=(SKIP)

# Automatically detect and use the correct install file
if [ -e "${pkgname}.install" ]; then
    install=${pkgname}.install
elif [ -e "pkgbuild.install" ]; then
    install=pkgbuild.install
fi

prepare() {
    cd "${srcdir}/${pkgname}"
    # Add any preparation steps here, if needed
    # For example: patch -p1 < "${srcdir}/patch-file.patch"
}

build() {
    cd "${srcdir}/${pkgname}"
    # Add build steps here, if needed
    # For example: make
}

check() {
    cd "${srcdir}/${pkgname}"
    # Add check/test steps here, if needed
    # For example: make check
}

package() {
    cd "${srcdir}/${pkgname}"

    # Determine the correct source directory
    if [ -d "${pkgname}" ]; then
        InternalDir="${srcdir}/${pkgname}/${pkgname}"
    else
        InternalDir="${srcdir}/${pkgname}"
    fi

    # Install files
    local dirs=("usr" "etc" "opt")
    for dir in "${dirs[@]}"; do
        if [ -d "${InternalDir}/${dir}" ]; then
            cp -a "${InternalDir}/${dir}" "${pkgdir}/"
        fi
    done
}
